{
    "name": "rn-braintree-xplat",
    "version": "0.1.0",
    "description": "Upgraded wrapper of android and ios braintree sdk",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/src/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "rn-braintree.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "test": "jest",
        "typescript": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepare": "bob build",
        "release": "release-it",
        "example": "yarn --cwd example",
        "pods": "cd example && pod-install --quiet",
        "bootstrap": "yarn example && yarn && yarn pods"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/vihasshah/rn-braintree-xplat",
    "author": "Vihas Shah <vihasshah@gmail.com> (https://github.com/vihasshah)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vihasshah/rn-braintree-xplat/issues"
    },
    "homepage": "https://github.com/vihasshah/rn-braintree-xplat#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@react-native-community/eslint-config": "^2.0.0",
        "@release-it/conventional-changelog": "^2.0.0",
        "@types/jest": "^26.0.0",
        "@types/react": "^16.9.19",
        "@types/react-native": "0.62.13",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "jest": "^26.0.1",
        "pod-install": "^0.1.0",
        "prettier": "^2.0.5",
        "react": "16.13.1",
        "react-native": "0.63.4",
        "react-native-builder-bob": "^0.17.1",
        "typescript": "^4.1.3"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native-community",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "quoteProps": "consistent",
                    "singleQuote": true,
                    "tabWidth": 4,
                    "trailingComma": "es5",
                    "useTabs": false,
                    "semi": false
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false,
        "semi": false
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
